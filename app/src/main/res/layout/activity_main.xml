<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/app_name"
        android:textSize="27sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addSleepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uyku Zamanı Ekle"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <Button
        android:id="@+id/addWakeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#007D96"
        android:padding="16dp"
        android:text="Uyanış Zamanı Ekle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/viewScheduleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#513FB5"
        android:padding="16dp"
        android:text="Uyku Programını Görüntüle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
