<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uyku Kaydı Ekle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Çocuk Seçimi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çocuk Seçimi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewSelectedChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seçilen Çocuk: Henüz seçilmedi"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/buttonSelectChild"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Çocuk Seç"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Tarih Seçimi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih Seçimi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewSleepDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/buttonSelectDate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tarih Seç"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Uyku Saatleri -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uyku Saatleri"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Uyku Saati -->
        <Button
            android:id="@+id/buttonSelectSleepTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Uyku Saatini Seç"
            android:textSize="16sp"
            android:backgroundTint="#E3F2FD"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <!-- Uyanma Saati -->
        <Button
            android:id="@+id/buttonSelectWakeTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Uyanma Saatini Seç"
            android:textSize="16sp"
            android:backgroundTint="#FFF3E0"
            android:textColor="#F57C00"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <!-- Uyku Kalitesi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uyku Kalitesi (1-5)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/editTextQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kalite (1=Kötü, 5=Mükemmel)"
                android:inputType="number"
                android:maxLength="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/buttonSaveRecord"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Uyku Kaydını Kaydet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView> 